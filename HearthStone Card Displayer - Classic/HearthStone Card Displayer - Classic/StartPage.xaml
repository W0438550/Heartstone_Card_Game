<Page
    x:Class="HCD_Classic.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HCD_Classic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image  Source="Assets/BackgroundImg.jpg" Stretch="Fill"></Image>
        <StackPanel>
            <Border Background="LightBlue">
                <TextBlock Text="Hearthstone Card Displayer" FontSize="68" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Black"/>
            </Border>
        </StackPanel>
        <Button x:Name="startApp" Content="Start" HorizontalAlignment="Center" 
                FontSize="50" Foreground="LightBlue" Background="Black"
                Margin="0 400 0 0" Width="200" BorderBrush="LightBlue" Click="startApp_Click"/>
    </Grid>
</Page>
